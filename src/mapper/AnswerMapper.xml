<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="answer">
	<!-- 
		본래 패키지를 포함한 타입의 클래스이름명을 사용하나
		typeAlias에 등록된 Alias값을 사요할 수 도 있음
	 -->
	<resultMap type="Answer" id="AnswerResult">
		<result property="answer" column="answer"/>
		<result property = "regDate" column ="regDate"/>
 	</resultMap>
 	
 	<select id="selectAnswer" parameterType="String" resultMap="AnswerResult">
 		 select answer, TO_DATE(#{regDate}, 'YYYYMMDDHH24MISS')
 		 from Answer		
 	</select>
 	
 	<insert id="insertAnswer" parameterType="vo.Answer">
 		insert into answer(answer, regDate) values(#{answer}, sysdate);
 	</insert>
 	
 	<update id="updateAnswer" parameterType="vo.Answer">
 		update Answer
 		set answer = #{type}
 			regDate = sysdate
 		where answerId = #{answerId}
 	</update>
 	
 	<delete id="deleteAnswer" parameterType="String">
 		delete from Answer
 		where answerId = #{answerId}
 	</delete>
 	
</mapper>
