<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>
	<!--요청에 대한   -->

    <constant name="struts.enable.DynamicMethodInvocation" value="false" />
    <constant name="struts.devMode" value="true" />

	
    <package name="default" namespace="/portfolio" extends="struts-default">
    <interceptors>
        	<!-- 로그인 인터셉터 정의 -->
            <interceptor name="loginInterceptor" class="interceptor.LoginInterceptor" />
        	
			 <interceptor-stack name="loginInterceptorStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="loginInterceptor" />
			</interceptor-stack>
						
		</interceptors>
		<default-action-ref name="main" />
    	
    	<global-results>
	        <!-- 모든 액션에서 "login"이 리턴되었을 때의 경로 (LoginInterceptor에서 리턴함) -->
  			<result name="login" type="redirect">/pages/main.action</result>
  		</global-results>
    	
    </package>

    <!-- Add packages here -->
   	<include file="action\member.xml"/>
    <include file="action\favoriteMember.xml"/>
    
    
</struts>
