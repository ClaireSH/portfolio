<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
	"-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
	"http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>   
	<!-- namespace 뒤에 붙음 --> 
    <package name="member" namespace="/member" extends="default">
        

		<!-- 인덱스로 이동 -->
		<action name="index">
			<result>/index.html</result>
		</action>
		
		<!-- 고객 가입 처리 -->
        <action name="insertMember" class="action.memberAction" method="insertMember">
			<result type="chain">login</result>
        	<result name="input">index.action</result>
        </action>
		
		<action name="login" class="action.memberAction" method="login">
			<result name="success" type="redirect">main.html</result>
			<result name="input" type="redirect">loginForm</result> 
			<!-- 여기 어떻게 함?
			
			
			 -->
		</action>
	
		<action name="favoriteMemberPage">
    		<result>/favoriteMemberPage.jsp</result>
    	</action>
    	
    	<action name="generalJoin">
    		<result></result>
    	</action>
    	
    	
    	<action name="searchFavoriteMember">
    		<result type="json"></result>
    	</action>
    	
    	<action name="requestFavoriteMember">
    		<result type="json"></result>
    	</action>
    	
    	<action name="acceptFavoriteMember">
    		<result type="json"></result>
    	</action>
    	
    	<action name="rejectFavoriteMember">
    		<result type="json"></result>
    	</action>
    	
    	<action name="deleteFavoriteMember">
    		<result type="json"></result>
    	</action> 
	
    </package>
</struts>
