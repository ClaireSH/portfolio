<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN" "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

	<!-- DB접속정보 값을 가지고 있는 파일 -->
	<properties resource="db.properties" />
	
	<typeAliases>
		<typeAlias type="portfolio.vo.AcademicBg" alias="AcademicBg"/>
		<typeAlias type="portfolio.vo.Career" alias="Career"/>
		<typeAlias type="portfolio.vo.Certificate" alias="Certificate"/>
		<typeAlias type="portfolio.vo.FavoriteMember" alias="FavoriteMember"/>
		<typeAlias type="portfolio.vo.FavoriteMember" alias="Member"/>
		<typeAlias type="portfolio.vo.FavoriteMember" alias="ProjectCareer"/>
		<typeAlias type="portfolio.vo.FavoriteMember" alias="Resume"/>
	</typeAliases>
	
	<!-- DB접속 정보 셋팅 -->
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	
	<!-- SQL문 정의한 파일 포함 -->
	<mappers>
		
	</mappers>
	
</configuration>
